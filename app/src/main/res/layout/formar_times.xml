<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingTop="5dp">
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
        
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
    
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/ckAtleta" android:layout_weight="1"/>
    
                <TextView
                        android:id="@+id/txtPosicaoSelecionar"
                        android:text="POS"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="gravity" android:layout_gravity="left|center_vertical"/>
    
                <RatingBar
                        android:id="@+id/rbNivelSelecionar"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="1"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        style="@android:style/Widget.Material.Light.RatingBar.Small"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
