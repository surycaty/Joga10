<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.surycaty.tirartime.MainActivity">

    <Button
        android:id="@+id/btnTirarTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar Jogadores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />

    <Button
        android:id="@+id/btnCadJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Jogador"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTirarTime"
        app:layout_constraintVertical_bias="0.237" />

</android.support.constraint.ConstraintLayout>
